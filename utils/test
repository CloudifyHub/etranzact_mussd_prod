// tests/testWhatsApp.js
const { sendWhatsAppMsg } = require("../utils/waService");

async function runTest() {
  try {
    const response = await sendWhatsAppMsg(
      "Hello Richmond 👋 This is a test message from your Node.js WhatsApp service 🚀",
      "233546640723", // replace with your WhatsApp phone number in intl format
      "TEST-12345"
    );

    console.log("✅ Test Response:", response);
  } catch (err) {
    console.error("❌ Test Failed:", err.message);
  }
}

runTest();
